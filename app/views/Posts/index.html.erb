<h1>Posts#index</h1>
<p>Find me in app/views/posts/index.html.erb</p>

<h1> Posts </h1>
<%= @posts.each do |post| %>
  <h2><%= post.title %></h2>
  <h2><%= post.author %></h2>
  <p><%= post.body %></p>
  <%= link_to 'Show post', post_path(post.id) %>
  <%= link_to 'Edit post', edit_post_path(post.id) %>
  <%= link_to 'Destroy post', post, method: :delete %>
<% end %>

<p><%= link_to 'New Post', new_post_path %></p>
